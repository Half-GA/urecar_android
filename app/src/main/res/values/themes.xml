<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParkingApp" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/highlight_violet</item>
        <item name="colorPrimaryVariant">@color/highlight_violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight_green</item>
        <item name="colorSecondaryVariant">@color/highlight_green</item>
        <item name="colorOnSecondary">@color/dark_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/dark_black</item>


        <!--상단바 없애기-->
        <item name="windowNoTitle">true</item>
        <!--상태바 없애기-->
        <item name="android:windowFullscreen">true</item>

    </style>
</resources>