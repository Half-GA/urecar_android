<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/highlight_violet</item>
        <item name="colorAccent">@color/highlight_green</item>
    </style>

    <style name="AppDialogTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/the_gothic_b</item>
    </style>


</resources>