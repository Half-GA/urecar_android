<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    android:backgroundTint="@color/dark_black"
    tools:context=".splashActivity">

    <!--dependency에 추가한 태그 사용...gif 입력시 추천해줌-->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/gmarketsansbold"
        android:includeFontPadding="false"
        android:text="당신이 원하는 주차장을 한번에"
        android:textColor="@color/highlight_green"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansbold"
        android:text="U'RECAR"
        android:textColor="@color/highlight_green"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/oval1"
        android:layout_width="190dp"
        android:layout_height="194dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/oval2"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginEnd="-200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/oval3"
        android:layout_width="148dp"
        android:layout_height="150dp"
        android:layout_marginEnd="-100dp"
        android:layout_marginBottom="-150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/oval4"
        android:layout_width="98dp"
        android:layout_height="100dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/oval5"
        android:layout_width="133dp"
        android:layout_height="131dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/oval" />


</androidx.constraintlayout.widget.ConstraintLayout>